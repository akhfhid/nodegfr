        async function loadServerStats() {
            const container = document.getElementById('serverStatsContainer');
            if (container.querySelector('.stats-detail-grid')) {
                container.style.opacity = '0.5';
            }
            
            try {
                const res = await fetch('/api/admin/server-stats');
                const data = await res.json();

                const formatMem = (bytes) => (bytes / (1024 * 1024 * 1024)).toFixed(2) + ' GB';
                const formatUptime = (seconds) => {
                    const d = Math.floor(seconds / (3600 * 24));
                    const h = Math.floor((seconds % (3600 * 24)) / 3600);
                    const m = Math.floor((seconds % 3600) / 60);
                    return `${d}d ${h}h ${m}m`;
                };

                const memUsedPct = ((data.memory.used / data.memory.total) * 100).toFixed(1);
                container.classList.remove('loading');
                container.style.opacity = '1';

                container.innerHTML = `
                    <div class="stats-detail-grid">
                        <!-- OS Info -->
                        <div class="stats-detail-card">
                            <div class="stats-header">
                                <i class="fa-solid fa-server"></i>
                                <h3>System OS</h3>
                            </div>
                            <div class="spec-item"><span class="spec-label">Hostname</span><span class="spec-value">${data.os.hostname}</span></div>
                            <div class="spec-item"><span class="spec-label">Platform</span><span class="spec-value">${data.os.platform} (${data.os.arch})</span></div>
                            <div class="spec-item"><span class="spec-label">Node.js</span><span class="spec-value">${data.os.nodeVersion}</span></div>
                            <div class="spec-item"><span class="spec-label">Net Interfaces</span><span class="spec-value">${data.os.interfaces} Active</span></div>
                            <div class="spec-item"><span class="spec-label">Uptime</span><span class="spec-value">${formatUptime(data.os.uptime)}</span></div>
                        </div>

                        <!-- CPU Info -->
                        <div class="stats-detail-card">
                            <div class="stats-header">
                                <i class="fa-solid fa-microchip"></i>
                                <h3>Processor</h3>
                            </div>
                            <div class="spec-item"><span class="spec-label">Model</span><span class="spec-value">${data.cpu.model.split('@')[0].trim()}</span></div>
                            <div class="spec-item"><span class="spec-label">Threads</span><span class="spec-value">${data.cpu.threads} Logical</span></div>
                            <div class="spec-item"><span class="spec-label">Turbo Clock</span><span class="spec-value" style="color: var(--accent-success); text-shadow: 0 0 10px var(--accent-success);">${data.cpu.speed} GHz</span></div>
                            <div class="spec-item"><span class="spec-label">Load Avg</span><span class="spec-value">${data.cpu.load.map(l => l.toFixed(2)).join(' / ')}</span></div>
                        </div>

                        <!-- Memory Info -->
                        <div class="stats-detail-card">
                            <div class="stats-header">
                                <i class="fa-solid fa-memory"></i>
                                <h3>Memory (RAM)</h3>
                            </div>
                            <div class="spec-item"><span class="spec-label">System Used</span><span class="spec-value">${formatMem(data.memory.used)} / ${formatMem(data.memory.total)}</span></div>
                            <div class="spec-item"><span class="spec-label">Process RSS</span><span class="spec-value">${(data.memory.process.rss / (1024 * 1024)).toFixed(1)} MB</span></div>
                            <div style="margin-top: 15px;">
                                <div class="spec-item" style="margin-bottom: 5px;"><span class="spec-label">System Usage</span><span class="spec-value">${memUsedPct}%</span></div>
                                <div class="progress-container"><div class="progress-bar" style="width: ${memUsedPct}%"></div></div>
                            </div>
