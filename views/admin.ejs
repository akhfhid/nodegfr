        async function loadLogs(page = 1) {
            state.logs.page = page;
            const container = document.getElementById('logsTable');
            container.classList.add('loading');

            try {
                const res = await fetch(`/api/admin/logs?page=${page}&limit=${state.logs.limit}&q=${encodeURIComponent(state.logs.q)}`);
                const data = await res.json();
                if (!data || !data.logs || !data.pagination) {
                    throw new Error(data.error || 'Data format invalid');
                }
                const { logs, pagination } = data;

                if (logs.length === 0 && page === 1 && !state.logs.q) {
                    container.innerHTML = '<p style="color: var(--text-muted);">No admin actions yet</p>';
                    container.classList.remove('loading');
                    const pagContainer = document.getElementById('logsPagination');
                    if (pagContainer) pagContainer.innerHTML = '';
                    return;
                }

                let html = `<table class="data-table">
                    <thead>
                        <tr>
                            <th>Time</th>
                            <th>Action</th>
                            <th>Admin</th>
                            <th>Target</th>
                            <th>Details</th>
                            <th>Reason</th>
                        </tr>
                    </thead>
                    <tbody>`;

                if (logs.length === 0) {
                    html += `<tr><td colspan="6" style="text-align: center; padding: 40px; color: var(--text-muted);">No logs found</td></tr>`;
                } else {
                    logs.forEach(log => {
                        html += `<tr>
                            <td style="color: var(--text-muted); font-size: 0.9rem;">${new Date(log.createdAt).toLocaleString()}</td>
                            <td><span class="badge badge-info" style="font-size: 0.85rem;">${log.action}</span></td>
                            <td style="font-weight: 500;">${log.adminEmail}</td>
                            <td style="color: var(--text-muted);">${log.targetUser || '-'}</td>
                            <td>
                                <div style="font-weight: 500; font-size: 0.95rem;">${log.details}</div>
                            </td>
                            <td style="color: var(--text-muted); font-size: 0.9rem;">${log.reason || '-'}</td>
                        </tr>`;
                    });
                }

                html += '</tbody></table>';
                container.innerHTML = html;
                container.classList.remove('loading');
                
                renderPagination('logsPagination', pagination, 'loadLogs');
            } catch (err) {
                console.error('Error in loadLogs:', err);
                container.innerHTML = `<p style="color: var(--accent-danger);">Error loading logs: ${err.message}</p>`;
                container.classList.remove('loading');
            }
        }

        async function loadPackages() {
