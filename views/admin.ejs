                            <div class="stats-header">
                                <i class="fa-solid fa-hard-drive"></i>
                                <h3>Storage</h3>
                            </div>
                            <div class="spec-item"><span class="spec-label">App Partition</span><span class="spec-value">${data.disk.used} / ${data.disk.size}</span></div>
