                }

                let html = '<table><thead><tr><th>Name</th><th>Tokens</th><th>Price</th><th>Active</th><th>Popular</th><th>Actions</th></tr></thead><tbody>';

                packages.forEach(pkg => {
                    const activeBadge = pkg.active ? '<span class="badge badge-success">Active</span>' : '<span class="badge badge-danger">Inactive</span>';
                    const popularBadge = pkg.popular ? '<i class="fa-solid fa-star" style="color: gold;" title="Popular"></i>' : '';

                    html += `<tr>
                        <td>
                            <div style="font-weight: 600;">${pkg.name}</div>
                            ${pkg.description ? `<div style="font-size: 0.8rem; color: var(--text-muted);">${pkg.description}</div>` : ''}
