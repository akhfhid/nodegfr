                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ code })
                    });
                    const data = await res.json();

                    if (data.valid) {
                        currentVoucherCode = data.code;
                        currentDiscountPercent = data.percent;
                        msg.style.color = 'var(--accent-success)';
                        msg.innerText = `Voucher dipakai! Diskon ${data.percent}%`;
                        updateModalPrice();
                    } else {
                        currentVoucherCode = null;
                        currentDiscountPercent = 0;
                        msg.style.color = 'var(--accent-danger)';
                        msg.innerText = data.message || "Kode tidak valid";
                        updateModalPrice();
                    }
                } catch (e) {
                    console.error(e);
                    msg.innerText = "Error checking voucher";
                }
            }

            // Reset voucher when opening modal
            const originalOpenPurchaseModal = openPurchaseModal;
            openPurchaseModal = function (defaultAmount) {
                currentVoucherCode = null;
                currentDiscountPercent = 0;
                const vInput = document.getElementById('voucherCodeInput');
                const vMsg = document.getElementById('voucherMessage');
                if (vInput) vInput.value = '';
                if (vMsg) vMsg.innerText = '';

                                        // Call original logic (copied here because redefining)
                                        <% if (!locals.user) { %>
                    window.location.href = '/auth/google';
                    return;
                                        <% } %>
                                        if (modalTokenInput) {
                    modalTokenInput.value = defaultAmount;
                    updateModalPrice();
                }
                if (purchaseModal) purchaseModal.style.display = 'flex';
            }



            // FAQ Accordion
            function toggleFaq(button) {
                const item = button.parentElement;
                const answer = item.querySelector('.faq-answer');
                const isActive = item.classList.contains('active');

                document.querySelectorAll('.faq-item').forEach(otherItem => {
                   if (otherItem !== item) {
                       otherItem.classList.remove('active');
                       otherItem.querySelector('.faq-answer').style.maxHeight = null;
                   }
                });

                if (isActive) {
                    item.classList.remove('active');
                    answer.style.maxHeight = null;
                } else {
                    item.classList.add('active');
                    answer.style.maxHeight = answer.scrollHeight + "px";
                }
            }

            const Toast = Swal.mixin({
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000,
                timerProgressBar: true,
                didOpen: (toast) => {
                    toast.addEventListener('mouseenter', Swal.stopTimer)
                    toast.addEventListener('mouseleave', Swal.resumeTimer)
                }
            });

            async function confirmPurchase() {
                const btn = document.getElementById('btnConfirmPurchase');
                const originalText = btn.innerText;

                // Get initial balance for comparison
                const mobileBalanceEl = document.getElementById('mobileTokenBalance');
                let initialBalance = 0;
                if (mobileBalanceEl) {
                    initialBalance = parseInt(mobileBalanceEl.innerText.trim()) || 0;
                }

                const tokens = modalTokenInput.value;
                if (tokens < 1) {
                    Toast.fire({ icon: 'warning', title: 'Minimal pembelian adalah 1 responden.' });
                    return;
                }

                // Disable button
                btn.disabled = true;
                btn.innerText = "Memproses...";
                btn.style.opacity = "0.7";
                btn.style.cursor = "not-allowed";

                try {
                    const response = await fetch('/api/purchase', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            tokens: parseInt(tokens),
                            voucherCode: currentVoucherCode
                        })
                    });
                    const data = await response.json();

                    if (data.snapToken) {
                        const orderId = data.orderId;

                        // START POLLING IMMEDIATELY (Outside onSuccess)
                        // This allows us to detect success even if user doesn't click "Finish" in popup
                        let attempts = 0;
                        const maxAttempts = 60; // 60 * 2s = 120 seconds max
                        let isPollingActive = true; // Flag to stop polling

                        const stopPolling = () => {
                            isPollingActive = false;
                            if (pollInterval) clearInterval(pollInterval);
                        };

                        const pollInterval = setInterval(async () => {
                            if (!isPollingActive) {
                                clearInterval(pollInterval);
                                return;
                            }
                            attempts++;
                            try {
                                const checkRes = await fetch(`/api/transaction/check/${orderId}`);
                                const checkData = await checkRes.json();

                                if (checkData.status === 'SUCCESS') {
                                    // Payment Success!
                                    stopPolling();

                                    // Update User Balance in UI
                                    const resMe = await fetch('/api/me');
                                    const user = await resMe.json();
                                    updateBalanceUI(user.tokenBalance);

                                    // Close Snap Popup First
                                    try {
                                        if (window.snap && typeof window.snap.hide === 'function') {
                                            window.snap.hide();
                                        }
                                    } catch (e) { }

                                    // Show BIG SUCCESS Modal with SweetAlert
                                    Swal.fire({
                                        icon: 'success',
                                        title: 'Pembayaran Berhasil!',
                                        html: `<div style="font-size: 1.1rem;">
                                                                    <p>Token kamu berhasil ditambahkan!</p>
                                                                    <p style="margin-top: 10px; font-size: 1.5rem; font-weight: bold; color: #10b981;">
                                                                        +${checkData.tokens} Tokens
                                                                    </p>
                                                                    <p style="margin-top: 10px; color: #666;">Total Token: ${user.tokenBalance} tokens</p>
                                                                </div>`,
                                        confirmButtonText: 'Mantap!',
                                        confirmButtonColor: '#8b5cf6',
                                        allowOutsideClick: false
                                    });

                                    resetButton();
                                    closePurchaseModal();
                                } else if (checkData.status === 'FAILED') {
                                    stopPolling();
                                    Swal.fire({
                                        icon: 'error',
                                        title: 'Pembayaran Gagal',
                                        text: 'Transaksi dibatalkan atau gagal diproses.',
                                        confirmButtonColor: '#ef4444'
                                    });
                                    resetButton();
                                    closePurchaseModal();
                                } else if (attempts >= maxAttempts) {
                                    stopPolling();
                                    // Timeout - stop polling but don't show error (user might still be paying)
                                }
                            } catch (err) {
                                console.error("Polling error", err);
                            }
                        }, 2000);

                        window.snap.pay(data.snapToken, {
                            onSuccess: function (result) {
                                // Midtrans says success - force check and update
                                stopPolling();

                                // Fetch updated status immediately
                                fetch(`/api/transaction/check/${orderId}`)
                                    .then(r => r.json())
                                    .then(async checkData => {
                                        const resMe = await fetch('/api/me');
                                        const user = await resMe.json();
                                        updateBalanceUI(user.tokenBalance);

                                        Swal.fire({
                                            icon: 'success',
                                            title: 'Pembayaran Berhasil!',
                                            html: `<div style="font-size: 1.1rem;">
                                                                        <p>Token kamu berhasil ditambahkan!</p>
                                                                        <p style="margin-top: 10px; font-size: 1.5rem; font-weight: bold; color: #10b981;">
                                                                            +${checkData.tokens} Tokens
                                                                        </p>
                                                                        <p style="margin-top: 10px; color: #666;">Total Token: ${user.tokenBalance} tokens</p>
                                                                    </div>`,
                                            confirmButtonText: 'Mantap!',
                                            confirmButtonColor: '#8b5cf6',
                                            allowOutsideClick: false
                                        });
                                    });

                                resetButton();
                                closePurchaseModal();
                            },
                            onPending: function (result) {
                                Toast.fire({ icon: 'info', title: 'Menunggu pembayaran...' });
                            },
                            onError: function (result) {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Pembayaran Gagal',
                                    text: 'Terjadi kesalahan saat memproses pembayaran.',
                                    confirmButtonColor: '#ef4444'
                                });
                                stopPolling();
                                resetButton();
                            },
                            onClose: function () {
                                setTimeout(() => {
                                    stopPolling();
                                    resetButton();
                                }, 10000);
                            }
                        });
                    } else {
                        Toast.fire({ icon: 'error', title: data.error || "Gagal membuat transaksi" });
                        resetButton();
                    }
                } catch (e) {
                    console.error(e);
                    Toast.fire({ icon: 'error', title: 'Terjadi kesalahan sistem' });
                    resetButton();
                }

                function updateBalanceUI(newBalance) {
                    const mobileBal = document.getElementById('mobileTokenBalance');
                    if (mobileBal) mobileBal.innerText = newBalance;

                    const desktopBal = document.querySelector('.user-balance');
                    if (desktopBal) {
                        desktopBal.innerHTML = `<i class="fa-solid fa-coins" style="color: gold; margin-right: 5px;"></i> ${newBalance}`;
                    }
                }

                function resetButton() {
                    btn.disabled = false;
                    btn.innerText = originalText;
                    btn.style.opacity = "1";
                    btn.style.cursor = "pointer";
                }
            }

            // Close modal on outside 
            // click
            window.addEventListener('click', function (e) {
                if (e.target === purchaseModal) closePurchaseModal();
            });
        </script>

        <% if (locals.user) { %>
            <div class="mobile-user-bar">
                <div style="display: flex; align-items: center; gap: 10px;">
                    <img src="/user/avatar?v=<%= user.id %>" alt="Avatar"
                        style="width:36px; height:36px; border-radius:50%; border: 2px solid var(--primary);"
                        referrerpolicy="no-referrer"
                        onerror="this.src='https://ui-avatars.com/api/?name=<%= user.name %>'">
                    <div>
                        <div style="font-weight: 700; font-size: 0.9rem; color: var(--text-main);">
                            <%= user.name %>
                        </div>
                        <div style="font-size: 0.75rem; color: var(--secondary);">
                            <i class="fa-solid fa-coins"></i> <span id="mobileTokenBalance">
                                <%= user.tokenBalance || 0 %>
                            </span> Tokens
                        </div>
                    </div>
                </div>
                <a href="#" onclick="openLogoutModal(); return false;"
                    style="background: rgba(239, 68, 68, 0.1); color: var(--accent-danger); width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; border-radius: 50%; text-decoration: none;">
                    <i class="fa-solid fa-right-from-bracket"></i>
                </a>
            </div>
            <% } %>

</body>

</html>