            const modalRateDisplay = document.getElementById('modalRateDisplay');
            const modalTokenCount = document.getElementById('modalTokenCount');
            const modalTotalPrice = document.getElementById('modalTotalPrice');

            function openPurchaseModal(defaultAmount) {
            <% if (!locals.user) { %>
                    window.location.href = '/auth/google';
                    return;
            <% } %>
            if (modalTokenInput) {
                    modalTokenInput.value = defaultAmount;
                    updateModalPrice();
                }
                if (purchaseModal) purchaseModal.style.display = 'flex';
            }

            function closePurchaseModal() {
                if (purchaseModal) purchaseModal.style.display = 'none';
            }

            let currentVoucherCode = null;
            let currentDiscountPercent = 0;

            function updateModalPrice() {
                if (!modalTokenInput) return;

                let val = parseInt(modalTokenInput.value);
                if (!val || val < 1) val = 0;

                // Try to find matching package
                const pkg = availablePackages.find(p => p.tokens === val && p.active);

                let total;
                let rateDisplay = '';

                if (pkg) {
                    total = pkg.price;
                    const rate = Math.round(pkg.price / pkg.tokens);
                    rateDisplay = `Harga Paket: Rp ${pkg.price.toLocaleString('id-ID')}`;
                } else {
                    let rate = 400;
                    total = val * rate;
                    rateDisplay = `Harga: Rp ${rate} / resp`;
                }

                let finalTotal = total;

                if (currentDiscountPercent > 0) {
                    const discount = Math.floor((total * currentDiscountPercent) / 100);
                    finalTotal = total - discount;

                    const discountDisplay = document.getElementById('discountDisplay');
                    if (discountDisplay) {
                        discountDisplay.style.display = 'block';
                        discountDisplay.innerText = `Hemat ${currentDiscountPercent}% (-Rp ${discount.toLocaleString('id-ID')})`;
                    }
                } else {
                    const discountDisplay = document.getElementById('discountDisplay');
                    if (discountDisplay) discountDisplay.style.display = 'none';
                }

                if (modalRateDisplay) modalRateDisplay.innerText = rateDisplay;
                if (modalTokenCount) modalTokenCount.innerText = `${val} pcs`;
                if (modalTotalPrice) modalTotalPrice.innerText = `Rp ${finalTotal.toLocaleString('id-ID')}`;
            }

